{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/style"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "indent": ["warn", 4],
        "max-len": ["warn", { "code": 100 }],
        "comma-dangle": ["warn", "never"],
        "no-unused-vars": "off",
        "no-console": "off"
    },
    "plugins": ["jest"]
}
